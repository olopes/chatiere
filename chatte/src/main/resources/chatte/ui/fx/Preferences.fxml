<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox fx:id="preferences" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chatte.ui.fx.PreferencesController">
   <children>
      <TabPane>
         <tabs>
            <Tab closable="false" text="%dialog.prefs.user.title">
               <content>
                  <VBox spacing="3.0">
                     <children>
                        <Label text="%dialog.prefs.user.nick" />
                        <TextField fx:id="nickField" layoutY="18.0" />
                        <Label layoutY="46.0" text="%dialog.prefs.user.port" />
                        <TextField fx:id="portField" layoutY="64.0" onKeyTyped="#checkNumericKey" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" text="%dialog.prefs.general.title">
               <content>
                  <VBox spacing="3.0">
                     <children>
                        <CheckBox fx:id="autoConnectCheck" mnemonicParsing="false" text="%dialog.prefs.general.autoconnect" />
                        <CheckBox fx:id="blinkToolbarCheck" mnemonicParsing="false" text="%dialog.prefs.general.blink" />
                        <CheckBox fx:id="showNotifsCheck" mnemonicParsing="false" text="%dialog.prefs.general.notifs" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" text="%dialog.prefs.network.title">
               <content>
                  <VBox spacing="3.0">
                     <children>
                        <Label text="%dialog.prefs.network.proxymode" />
                        <ComboBox fx:id="proxyMode" onAction="#toggleProxyFields" />
                        <Label text="%dialog.prefs.network.proxyhost" />
                        <TextField fx:id="proxyHost" />
                        <Label text="%dialog.prefs.network.proxyport" />
                        <TextField fx:id="proxyPort" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      <HBox maxHeight="-Infinity" maxWidth="+Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <HBox alignment="CENTER">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </HBox>
            <Pane maxWidth="+Infinity" HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelButton" cancelButton="true" minWidth="80.0" mnemonicParsing="false" onAction="#doCancelClick" text="%btn.cancel" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="okButton" minWidth="80.0" mnemonicParsing="false" onAction="#doOkClick" text="%btn.ok" HBox.hgrow="NEVER">
                     <HBox.margin>
                        <Insets left="14.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
